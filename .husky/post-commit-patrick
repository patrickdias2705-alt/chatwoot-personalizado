#!/bin/sh
# Hook opcional para sincroniza칞칚o autom치tica com reposit칩rio patrick
# Para ativar: mv .husky/post-commit-patrick .husky/post-commit
# Para desativar: rm .husky/post-commit

. "$(dirname "$0")/_/husky.sh"

# Verificar se estamos na branch main ou develop
BRANCH=$(git rev-parse --abbrev-ref HEAD)

if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "develop" ]; then
    echo "游댃 Sincronizando automaticamente com reposit칩rio patrick..."
    git push patrick "$BRANCH" --force-with-lease 2>/dev/null || {
        echo "丘멆잺  Push autom치tico falhou. Execute manualmente: git push patrick $BRANCH"
    }
fi

